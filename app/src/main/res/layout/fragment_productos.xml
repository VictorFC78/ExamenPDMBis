<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".Productos">
    <LinearLayout
        android:id="@+id/layoutProductos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/texto_productos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_product"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textAlignment="center"
            />
        <ImageView
            android:id="@+id/productoHamburgesa"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:src="@drawable/hamburguer"/>
        <ImageView
            android:id="@+id/productopizza"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:src="@drawable/pizza"/>
        <ImageView
            android:id="@+id/productoEnsalada"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:src="@drawable/salad"/>
        <ImageView
            android:id="@+id/productoTaco"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:src="@drawable/taco"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>